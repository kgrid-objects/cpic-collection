{
  "template": "kotemplate",
  "project": "cpic",
  "devDependencies": {
    "file-exists": "^5.0.1",
    "jest": "^25.0.0",
    "jsonpath": "^1.0.2",
    "mocha": "5.2.0",
    "rewire": "^4.0.1",
    "scripty": "1.7.2",
    "shelljs": "^0.8.2",
    "start-server-and-test": "^1.7.1",
    "vuepress": "^1.3.1",
    "@kgrid/cli": "^0.4.3"
  },
  "scripts": {
    "test": "jest --ci --reporters=default --reporters=jest-junit",
    "test-it": "newman run tests/postman/cpic_integration_tests.postman_collection.json --reporters  cli,junit --reporter-junit-export test-results",
    "package": "scripty",
    "start": "cd collection && kgrid setup && kgrid start:activator",
    "ci": "server-test :8080 test-it ",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "scripty": {
    "path": "scripts",
    "windowsPath": "scriptswin",
    "silent": true
  },
  "jest": {
    "verbose": true,
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "./test-results/junit.xml"
  },
  "engines": {
    "node": ">= 4.0.0",
    "npm": ">= 3.0.0"
  },
  "dependencies": {
    "await-sleep": "0.0.1",
    "axios": "^0.18.1",
    "download": "^7.1.0",
    "download-cli": "^1.1.1",
    "firstline": "^2.0.2",
    "fs-extra": "^7.0.0",
    "jest-junit": "^7.0.0",
    "newman": "^4.6.0"
  }
}
